{
  "name": "polykey",
  "version": "0.0.1",
  "private": true,
  "description": "A peer-to-peer secret sharing and management application",
  "author": "Roger Qiu",
  "contributors": [
    "Aaashwin Varshney",
    "Gideon Rosales",
    "Robert Cronin"
  ],
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint .",
    "npm-run-all": "npm-run-all",
    "rimraf": "rimraf",
    "concurrently": "concurrently",
    "webpack-cli": "webpack-cli",
    "compile": "npm-run-all webpack-cli mock_for_oauth2orize",
    "dev:webpack:watch": "webpack-cli --watch",
    "dev:electron": "electron .",
    "cleanup": "rimraf ./dist",
    "mock_for_oauth2orize": "mkdir dist/grant && mkdir dist/exchange",
    "dev": "npm-run-all cleanup compile 'concurrently 'npm:dev:*''",
    "lint:fix": "eslint . --fix",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook",
    "test": "jest"
  },
  "dependencies": {
    "@matrixai/polykey": "^0.0.23",
    "balm-ui": "^9.0.0-rc.4",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@types/jest": "^25.0.0",
    "@types/node": "^13.13.1",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vue/cli": "^4.5.8",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/test-utils": "^2.0.0-beta.5",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.0.0",
    "eslint": "^7.6.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^7.0.0-0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^25.0.0",
    "mini-css-extract-plugin": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "storybook": "^5.3.19",
    "ts-loader": "^8.0.7",
    "ts-node": "^8.8.2",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "~3.9.3",
    "unzip": "^0.1.11",
    "vue-jest": "^5.0.0-0",
    "vue-loader": "^16.0.0-beta.5",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0",
    "webpackbar": "^4.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "bugs": {
    "url": "https://github.com/MatrixAI/PolyKey/issues"
  },
  "build": {
    "electronVersion": "9.0.0",
    "appId": "com.matrixai.polykey",
    "extends": null,
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "tar.gz"
    },
    "win": {
      "icon": "static/logo.png",
      "target": "portable"
    },
    "mac": {
      "icon": "static/logo.png",
      "target": "tar.gz"
    }
  },
  "electronWebpack": {
    "whiteListedModules": [
      "vue",
      "vuetify",
      "vue-property-decorator",
      "vue-class-component",
      "vue-styled-components",
      "vuex-module-decorators"
    ],
    "main": {
      "sourceDirectory": "./src/main"
    },
    "renderer": {
      "sourceDirectory": "./src/renderer"
    }
  },
  "engines": {
    "node": ">=12.14.0"
  },
  "homepage": "https://github.com/MatrixAI/PolyKey",
  "keywords": [
    "secrets"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatrixAI/PolyKey.git"
  }
}

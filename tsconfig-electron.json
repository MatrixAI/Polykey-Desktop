{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2016",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@": ["index"],
      "@*": ["*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2016",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@": ["index"],
      "@*": ["*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/renderer-vue2/**/*"
  ]
}
